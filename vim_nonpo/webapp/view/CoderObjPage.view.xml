<mvc:View
    controllerName="com.nonpo.vimnonpo.controller.CoderObjPage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:u="sap.uxap"
>
    <Page
        title="Edit Details"
        enableScrolling="false"
        showHeader="false"
    >
        <content>
            <l:Splitter
                width="100%"
                class="noSplitterGrip"
            >
                <u:ObjectPageLayout
                    id="ObjectPageLayout"
                    showTitleInHeaderContent="true"
                    alwaysShowContentHeader="false"
                    preserveHeaderStateOnScroll="false"
                    headerContentPinnable="true"
                    headerContentPinned="false"
                    toggleHeaderOnTitleClick="true"
                    showFooter="true"
                    isChildPage="true"
                    upperCaseAnchorBar="false"
                >
                    <u:headerTitle>
                        <u:ObjectPageDynamicHeaderTitle>
                            <u:breadcrumbs>
                                <Breadcrumbs
                                    currentLocationText="Non PO Invoice Creation"
                                >
                                    <Link
                                        text="Requests"
                                        press="handleClose"
                                    />
                                </Breadcrumbs>
                            </u:breadcrumbs>
                            <u:expandedHeading>
                                <Title
                                    text="INV NO : {headData>/INVOICE_NUMBER}"
                                    level="H2"
                                />
                            </u:expandedHeading>
                            <u:snappedHeading>
                                <Title
                                    text="INV NO : {headData>/INVOICE_NUMBER}"
                                    level="H2"
                                />
                            </u:snappedHeading>
                            <u:actions>
                                <Button
                                    id="idEditBtn"
                                    text="Edit"
                                    visible="{= ${headData>/STATUS} === 3 }"
                                    type="Emphasized"
                                    press="onEditNonPO"
                                />
                            </u:actions>
                        </u:ObjectPageDynamicHeaderTitle>
                    </u:headerTitle>

                    <u:headerContent>
                        <FlexBox
                            wrap="Wrap"
                            fitContainer="true"
                            alignItems="Stretch"
                        >
                            <Avatar
                                src="./Images/object.png"
                                displaySize="L"
                                displayShape="Square"
                                class="sapUiMediumMarginEnd sapUiTinyMarginTop"
                            />

                            <VBox
                                class="sapUiSmallMarginEnd sapUiSmallMarginBottom"
                            >
                                <HBox class="sapUiTinyMarginBottom">
                                    <Label
                                        text="Supplier:"
                                        class="sapUiTinyMarginEnd sapUiTinyMarginTop"
                                    />
                                    <Text
                                        text="{headData>/SUPPLIER_NAME}"
                                        class="sapUiTinyMarginTop"
                                    />
                                </HBox>
                                <HBox class="sapUiTinyMarginBottom">
                                    <Label
                                        text="Company Code:"
                                        class="sapUiTinyMarginEnd"
                                    />
                                    <Text text="{headData>/COMPANY_CODE}" />
                                </HBox>
                                <HBox class="sapUiTinyMarginBottom">
                                    <Label
                                        text="Doc Date:"
                                        class="sapUiTinyMarginEnd sapUiTinyMarginTop"
                                    />
                                    <Text
                                        text="{path: 'headData>/INVOICE_DATE', formatter: '.formatDate'}"
                                        visible="{= !${headData>/editable} }"
                                    />
                                    <DatePicker
                                        value="{path: 'headData>/INVOICE_DATE', formatter: '.formatDate'}"
                                        valueFormat="yyyy-MM-dd"
                                        displayFormat="long"
                                        visible="{headData>/editable}"
                                        width="8rem"
                                    />
                                </HBox>
                            </VBox>

                            <VBox
                                class="sapUiSmallMarginEnd sapUiSmallMarginBottom sapUiSmallMarginBegin"
                            >
                                <HBox class="sapUiTinyMarginBottom">
                                    <Label
                                        text="T Amount:"
                                        class="sapUiTinyMarginEnd sapUiTinyMarginTop"
                                    />
                                    <VBox>
                                        <ObjectNumber
                                            number="{headData>/TOTAL_AMOUNT}"
                                            unit="INR"
                                            visible="{= !${headData>/editable} }"
                                        />
                                        <Input
                                            value="{headData>/TOTAL_AMOUNT}"
                                            visible="{headData>/editable}"
                                            class="classinp"
                                            width="7rem"
                                        />
                                    </VBox>
                                </HBox>
                                <HBox class="sapUiTinyMarginBottom">
                                    <Label
                                        text="Status:"
                                        class="sapUiTinyMarginEnd"
                                    />
                                    <ObjectStatus
                                        text="{headData>/STATUS_DESC}"
                                        state="{path: 'headData>/STATUS_DESC', formatter: '.statusState'}"
                                    />
                                </HBox>
                            </VBox>

                            <VBox
                                class="sapUiSmallMarginEnd sapUiSmallMarginBottom sapUiSmallMarginBegin"
                            >
                                <HBox class="sapUiTinyMarginBottom">
                                    <Label
                                        text="Expense Type:"
                                        class="sapUiTinyMarginEnd sapUiTinyMarginTop "
                                    />
                                    <Input
                                        value="{headData>/EXPENSE_TYPE}"
                                        visible="{headData>/editable}"
                                        width="7rem"
                                    />

                                    <Text
                                        text="{headData>/EXPENSE_TYPE}"
                                        visible="{= !${headData>/editable} }"
                                    />
                                </HBox>
                            </VBox>
                        </FlexBox>
                    </u:headerContent>

                    <u:sections>
                        <u:ObjectPageSection
                            title="Item Details"
                            titleUppercase="false"
                        >
                            <u:subSections>
                                <u:ObjectPageSubSection>
                                    <u:blocks>
                                        <VBox>
                                            <Toolbar>
                                                <ToolbarSpacer />
                                                <Button
                                                    text="+ Add"
                                                    press=".onAddItem"
                                                />
                                                <Button
                                                    text="Delete"
                                                    press=".onDeleteItem"
                                                />
                                                <Button
                                                    icon="sap-icon://excel-attachment"
                                                    text="Export"
                                                    press=".onExportExcel"
                                                />
                                            </Toolbar>

                                            <Table
                                                id="myTable"
                                                mode="SingleSelectLeft"
                                                items="{path: 'tableModel>/results'}"
                                            >
                                                <columns>
                                                    <Column>
                                                        <Label text="Sr No" />
                                                    </Column>
                                                    <Column>
                                                        <Label
                                                            text="Material"
                                                        />
                                                    </Column>
                                                    <Column>
                                                        <Label
                                                            text="Cost Object Type"
                                                        />
                                                    </Column>
                                                    <Column>
                                                        <Label
                                                            text="Cost Object"
                                                        />
                                                    </Column>
                                                    <Column>
                                                        <Label
                                                            text="GL/Account"
                                                        />
                                                    </Column>
                                                    <Column>
                                                        <Label text="QTY" />
                                                    </Column>
                                                    <Column>
                                                        <Label text="Price" />
                                                    </Column>
                                                </columns>

                                                <items>
                                                    <ColumnListItem>
                                                        <cells>
                                                            <!-- Sr No: Only Text -->
                                                            <VBox>
                                                                <Text
                                                                    text="{tableModel>SrNo}"
                                                                />
                                                            </VBox>

                                                            <!-- Material -->
                                                            <VBox>
                                                                <Input
                                                                    value="{tableModel>Material}"
                                                                    visible="{headData>/editable}"
                                                                />
                                                                <Text
                                                                    text="{tableModel>Material}"
                                                                    visible="{= !${headData>/editable} }"
                                                                />
                                                            </VBox>

                                                            <!-- Cost Object Type -->
                                                            <VBox>
                                                                <Input
                                                                    id="idCostObj"
                                                                    valueHelpRequest="onValueHelpCostObjectType"
                                                                    showValueHelp="true"
                                                                    suggestionItems="{/CostObjectType}"
                                                                    suggestionItemSelected="onSuggestionItemSelected"
                                                                    value="{tableModel>CostObjectType}"
                                                                    visible="{headData>/editable}"
                                                                >
                                                                    <suggestionItems
                                                                    >
                                                                        <core:ListItem
                                                                            key="{TYPE_CODE}"
                                                                            text="{DESCRIPTION}"
                                                                        />
                                                                    </suggestionItems>
                                                                </Input>
                                                                <Text
                                                                    text="{tableModel>CostObjectType}"
                                                                    visible="{= !${headData>/editable} }"
                                                                />
                                                            </VBox>

                                                            <!-- Cost Object -->
                                                            <VBox>
                                                                <Input
                                                                    id="idCB"
                                                                    editable="{hierarchydata>editablechk}"
                                                                    valueHelpRequest="onValueHelpCB"
                                                                    showValueHelp="true"
                                                                    suggestionItems="{FilteredUser>/results}"
                                                                    suggestionItemSelected="onSuggestionItemSelected"
                                                                    value="{tableModel>CostObject}"
                                                                    visible="{headData>/editable}"
                                                                >
                                                                    <suggestionItems
                                                                    >
                                                                        <core:ListItem
                                                                            key="{hierarchydata>user}"
                                                                            text="{hierarchydata>user}"
                                                                        />
                                                                    </suggestionItems>
                                                                </Input>
                                                                <Text
                                                                    text="{tableModel>CostObject}"
                                                                    visible="{= !${headData>/editable} }"
                                                                />
                                                            </VBox>

                                                            <!-- GL Account -->
                                                            <VBox>
                                                                <Input
                                                                    id="idGLAcc"
                                                                    valueHelpRequest="onValueHelpGLAccount"
                                                                    showValueHelp="true"
                                                                    suggestionItems="{/GLAccount}"
                                                                    suggestionItemSelected="onSuggestionItemSelected"
                                                                    value="{tableModel>GLAccount}"
                                                                    visible="{headData>/editable}"
                                                                >
                                                                    <suggestionItems
                                                                    >
                                                                        <core:ListItem
                                                                            key="{hierarchydata>user}"
                                                                            text="{hierarchydata>user}"
                                                                        />
                                                                    </suggestionItems>
                                                                </Input>
                                                                <Text
                                                                    text="{tableModel>GLAccount}"
                                                                    visible="{= !${headData>/editable} }"
                                                                />
                                                            </VBox>

                                                            <!-- Quantity -->
                                                            <VBox>
                                                                <Input
                                                                    value="{tableModel>Qty}"
                                                                    type="Number"
                                                                    visible="{headData>/editable}"
                                                                />
                                                                <Text
                                                                    text="{tableModel>Qty}"
                                                                    visible="{= !${headData>/editable} }"
                                                                />
                                                            </VBox>

                                                            <!-- Price -->
                                                            <VBox>
                                                                <Input
                                                                    value="{tableModel>Total}"
                                                                    type="Number"
                                                                    change=".onTotalAmountChanged"
                                                                    visible="{headData>/editable}"
                                                                />
                                                                <Text
                                                                    text="{tableModel>Total}"
                                                                    visible="{= !${headData>/editable} }"
                                                                />
                                                            </VBox>
                                                        </cells>
                                                    </ColumnListItem>
                                                </items>
                                            </Table>
                                            <HBox
                                                justifyContent="End"
                                                class="sapUiSmallMarginTop"
                                            >
                                                <Button
                                                    text="+ Add"
                                                    press=".onClickAdd"
                                                    type="Transparent"
                                                />
                                            </HBox>
                                            <!-- Container for dynamically added rows -->
                                            <VBox
                                                id="itemsVBox"
                                                class="sapUiTinyMarginTop"
                                                justifyContent="End"
                                            />

                                            <HBox
                                                justifyContent="End"
                                                class="sapUiTinyMarginTop"
                                            >
                                                <Text
                                                    id="totalAmountText"
                                                    text="Total Amount: 0"
                                                />
                                            </HBox>
                                        </VBox>
                                    </u:blocks>
                                </u:ObjectPageSubSection>
                            </u:subSections>
                        </u:ObjectPageSection>
                        <u:ObjectPageSection
                            title="Attachments ({= ${headData>/TO_VIM_NON_PO_ATTCHEMENTS/results}.length })"
                        >
                            <u:subSections>
                                <u:ObjectPageSubSection>
                                    <u:blocks>
                                        <Panel class="sapUiNoContentPadding">
                                            <VBox
                                                class="sapUiSmallMargin sapUiSmallMarginTop sapUiSmallMarginBottom"
                                            >
                                                <!-- Header -->
                                                <HBox
                                                    justifyContent="SpaceBetween"
                                                    alignItems="Center"
                                                    class="sapUiTinyMarginBottom"
                                                >
                                                    <Title
                                                        text="Attachments ({= ${headData>/TO_VIM_NON_PO_ATTCHEMENTS/results}.length })"
                                                        level="H3"
                                                        id="attachmentsCountTitle"
                                                    />
                                                    <Button
                                                        text="Extract Details Using OCR"
                                                        press="onExtractOCR"
                                                    />
                                                </HBox>

                                                <!-- List -->
                                                <List
                                                    id="attachmentsList"
                                                    items="{headData>/TO_VIM_NON_PO_ATTCHEMENTS/results}"
                                                    inset="false"
                                                    noDataText="No attachments uploaded."
                                                    class="sapUiNoMargin"
                                                >
                                                    <CustomListItem>
                                                        <HBox
                                                            justifyContent="SpaceBetween"
                                                            alignItems="Center"
                                                            class="sapUiSmallMargin"
                                                        >
                                                            <!-- Left -->
                                                            <HBox
                                                                alignItems="Center"
                                                            >
                                                                <core:Icon
                                                                    src="sap-icon://document-text"
                                                                    size="2rem"
                                                                    class="sapUiSmallMarginEnd"
                                                                />
                                                                <VBox>
                                                                    <Title
                                                                        text="{headData>IMAGE_FILE_NAME}"
                                                                    />
                                                                    <Text
                                                                        text="Uploaded By: Susan Baker · Uploaded On: 2014-09-03 · File Size: 500 Bytes · Version: 1"
                                                                    />
                                                                    <Text
                                                                        text="Status: Success"
                                                                        class="sapUiSuccessText"
                                                                    />
                                                                </VBox>
                                                            </HBox>

                                                            <!-- Right -->
                                                            <HBox
                                                                alignItems="Center"
                                                            >
                                                                <Button
                                                                    icon="sap-icon://show"
                                                                    type="Transparent"
                                                                    tooltip="Preview Attachment"
                                                                    press="onPreviewPdf"
                                                                >
                                                                    <customData>
                                                                        <core:CustomData
                                                                            key="imageUrl"
                                                                            value="{headData>IMAGEURL}"
                                                                            writeToDom="false"
                                                                        />
                                                                    </customData>
                                                                </Button>
                                                            </HBox>
                                                        </HBox>
                                                    </CustomListItem>
                                                </List>
                                            </VBox>
                                        </Panel>
                                    </u:blocks>
                                </u:ObjectPageSubSection>
                            </u:subSections>
                        </u:ObjectPageSection>
                    </u:sections>
                    <u:footer>
                        <Toolbar id="otbFooter">
                            <ToolbarSpacer />
                            <Button
                                type="Back"
                                text="Cancel"
                                press="handleClose"
                            />
                            <Button
                                type="Success"
                                icon="sap-icon://complete"
                                text="Submit"
                                press="onSubmitCoder"
                                visible="{= ${headData>/STATUS} !== 3 }"
                            />
                            <Button
                                type="Success"
                                icon="sap-icon://complete"
                                text="Edit Submit"
                                press="onEditSubmitCoder"
                                visible="{= ${headData>/STATUS} === 3 }"
                            />
                        </Toolbar>
                    </u:footer>
                </u:ObjectPageLayout>
                <Page
                    enableScrolling="false"
                    showHeader="false"
                    id="previewInvoice"
                >
                    <layoutData>
                        <l:SplitterLayoutData
                            size="0%"
                            id="previewSplitterLayout"
                        />
                    </layoutData>

                    <content>
                        <VBox class="sapUiTinyMargin">
                            <HBox justifyContent="End">
                                <Button
                                    icon="sap-icon://decline"
                                    type="Transparent"
                                    tooltip="Close Preview"
                                    press=".onClosePreview"
                                />
                            </HBox>

                            <core:HTML
                                content='&lt;iframe id="pdfFrame" width="100%" height="700px" style="border:none;"&gt;&lt;/iframe&gt;'
                            />
                        </VBox>
                    </content>
                </Page>
            </l:Splitter>
        </content>
    </Page>
</mvc:View>
